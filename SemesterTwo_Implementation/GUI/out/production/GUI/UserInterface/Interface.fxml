<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<GridPane alignment="center" hgap="10" styleClass="background" vgap="10" xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/8" fx:controller="UserInterface.Controller">

    <Label GridPane.columnIndex="0" GridPane.rowIndex="0">
        <graphic>
            <ImageView fitWidth="100" smooth="true">
                <image>
                    <Image url="/images/logoMini.png"/>
                </image>
            </ImageView>
        </graphic>
    </Label>

    <Label text="Username: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Label text="Password: " GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <HBox alignment="BOTTOM_RIGHT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button onAction="#login" text="Login"/>
    </HBox>

    <Text fx:id="loginPressed" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <stylesheets>
        <URL value="@/css/login.css"/>
    </stylesheets>

</GridPane>
